{% extends "layout.njk" %}

{% block content %}

    <div id="wrapper">
        <h1>Aulas</h1>
    </div>

    <section class="cards">

        {% for item in items %}
        <div class="card" id="{{item.id}}">
            <div class="card-img-container">
                <img src="https://i.ytimg.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
            </div>
            <div class="card-content">
                <p>{{item.title}}</p>
            </div>
            <div class="card-info">
                <p>{{item.duration}}</p>
                <p class="card-price">{{item.price}}</p>
            </div>
        </div>
        {% endfor%}

    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>
        </div>

        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>

      <script src="/scripts.js"></script>

{% endblock %}